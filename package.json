{
    "name": "montage",
    "private": true,
    "version": "0.0.0",
    "license": "MIT",
    "type": "module",
    "scripts": {
        "dev": "vite --host",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "format": "prettier --write .",
        "preview": "vite preview"
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "printWidth": 120,
        "singleQuote": false,
        "arrowParens": "avoid",
        "trailingComma": "all",
        "plugins": [
            "prettier-plugin-tailwindcss"
        ]
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/modifiers": "^9.0.0",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@fontsource/fira-sans": "^5.2.5",
        "@fontsource/m-plus-1": "^5.2.5",
        "i18next": "^24.2.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-i18next": "^15.4.1",
        "react-icons": "^5.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@tailwindcss/vite": "^4.0.17",
        "@types/react": "^19.0.12",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react-swc": "^3.8.1",
        "eslint": "^9.23.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^15.15.0",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "tailwindcss": "^4.0.5",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.28.0",
        "vite": "^6.2.3"
    }
}
